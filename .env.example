# Node Configuration
NODE_ENV=production                 # Environment: development/production
NODE_ID=node_01                    # Node identifier
NODE_PORT=8000                     # Service port
LOG_LEVEL=INFO                     # Log level: DEBUG/INFO/WARNING/ERROR

# Task Pool Configuration
POOL_URL=https://pool.example.com          # Task pool URL
POOL_API_KEY=your_api_key_here            # API key
POOL_WEBSOCKET_URL=wss://pool.example.com/ws

# Database Configuration
DB_TYPE=postgresql                         # Database type: sqlite/postgresql
DB_URL=postgresql://user:pass@host:5432/dbname

# GPU Configuration
CUDA_VISIBLE_DEVICES=0,1                   # Available GPU devices
GPU_MEMORY_LIMIT=8192                     # GPU memory limit (MB)

# Model Configuration
MODEL_CACHE_DIR=/path/to/models           # Model cache directory
DOWNLOAD_CACHE_DIR=/path/to/downloads     # Download cache directory
MAX_BATCH_SIZE=8                          # Maximum batch size

# Security Configuration
SECRET_KEY=your_secret_key_here           # Secret key
ENABLE_SSL=true                           # Enable SSL
SSL_CERT_PATH=/path/to/cert.pem          # SSL certificate path
SSL_KEY_PATH=/path/to/key.pem            # SSL key path

# Monitoring Configuration
ENABLE_MONITORING=true                    # Enable monitoring
PROMETHEUS_PORT=9090                      # Prometheus port

# Frontend Configuration
VITE_API_BASE_URL=https://api.example.com # API base URL
VITE_WS_URL=wss://api.example.com/ws      # WebSocket URL
VITE_DEV_TOOLS=false                      # Developer tools toggle
VITE_MOCK_API=false                       # Mock API toggle

# Debug Configuration
DEBUG=false                               # Debug mode
DEBUG_PORT=5678                           # Debug port
PROFILE_ENABLED=false                     # Performance profiling toggle

# Resource Limits
MAX_WORKERS=8                            # Maximum worker processes
MAX_MEMORY_USAGE=16384                   # Maximum memory usage (MB)
DISK_CACHE_SIZE=10240                    # Disk cache size (MB)

# Task Configuration
MAX_TASK_TIMEOUT=3600                    # Maximum task timeout (seconds)
TASK_QUEUE_SIZE=500                      # Task queue size
RETRY_ATTEMPTS=3                         # Number of retry attempts
RETRY_DELAY=5                            # Retry delay (seconds)

# Network Configuration
REQUEST_TIMEOUT=30                       # Request timeout (seconds)
MAX_RETRIES=3                           # Maximum retries
KEEP_ALIVE_INTERVAL=15                  # Keepalive interval (seconds)

# Cache Configuration
REDIS_URL=redis://redis.example.com:6379/0  # Redis URL
CACHE_TTL=3600                          # Cache time to live (seconds)
RESULT_CACHE_SIZE=5000                  # Result cache size

# Experimental Features
EXPERIMENTAL_FEATURES=false              # Experimental features toggle
BETA_ALGORITHMS=false                    # Beta algorithms toggle

# Performance Optimization
OPTIMIZATION_LEVEL=medium               # Optimization level: low/medium/high
ENABLE_JIT=true                        # Enable JIT compilation
USE_THREAD_POOL=true                   # Use thread pool

# Load Balancing
LOAD_BALANCING=true                    # Load balancing toggle
MAX_LOAD_FACTOR=0.8                    # Maximum load factor

# Alert Configuration
ALERT_EMAIL=admin@example.com          # Alert email address
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx/yyy/zzz

# Backup Configuration
BACKUP_ENABLED=true                    # Enable backups
BACKUP_INTERVAL=86400                  # Backup interval (seconds)
BACKUP_RETENTION_DAYS=30               # Backup retention period (days)
BACKUP_PATH=/path/to/backups          # Backup directory path

# CDN Configuration
CDN_ENABLED=true                       # Enable CDN
CDN_URL=https://cdn.example.com       # CDN URL
CDN_REGION=global                     # CDN region

# Logging Configuration
LOG_FORMAT=json                        # Log format: text/json
LOG_RETENTION_DAYS=90                 # Log retention period (days)
LOG_PATH=/path/to/logs                # Log directory path
SYSLOG_ENABLED=true                   # Enable system logging

# Metrics Collection
METRICS_COLLECTION_INTERVAL=60         # Metrics collection interval (seconds)
METRICS_RETENTION_DAYS=180            # Metrics retention period (days)
GRAFANA_ENABLED=true                  # Enable Grafana 